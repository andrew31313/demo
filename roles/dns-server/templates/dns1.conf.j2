auth-server=networkplus.test,eth0
interface-name=networkplus.test,eth0
auth-zone=networkplus.test,192.168.0.0/16,eth0
domain-needed
bogus-priv
no-resolv
interface=eth0
bind-interfaces
server=8.8.8.8
local=/networkplus.test/192.168.44.1
rev-server=192.168.0.0/16,192.168.44.1
cname=dns.networkplus.test,dns1.networkplus.test
cname=dhcp.networkplus.test,dns1.networkplus.test
cname=pxe.networkplus.test,dns1.networkplus.test
cname=www.networkplus.test,www1.networkplus.test

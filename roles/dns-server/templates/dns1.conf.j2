# default VLAN
#==========
domain=networkplus.test,192.168.0.0/16,local
dhcp-range=set:default_vlan,192.168.45.100,192.168.45.150,255.255.255.0,4h
dhcp-option=tag:default_vlan,option:router,192.168.45.254
dhcp-option=tag:default_vlan,option:dns-server,192.168.44.1
dhcp-option=tag:default_vlan,option:domain-search,networkplus.test
